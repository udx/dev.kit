{
  "id": "install",
  "title": "Install and cleanup",
  "description": "Validate install, shell enablement, doctor checks, and uninstall/cleanup.",
  "steps": [
    {"id": "paths", "command": "${DEV_KIT_BIN} paths"},
    {"id": "doctor-pre", "command": "${DEV_KIT_BIN} doctor"},
    {"id": "install", "command": "${DEV_KIT_BIN} install"},
    {"id": "enable-shell", "command": "${DEV_KIT_BIN} enable --shell=${SHELL_KIND}"},
    {"id": "doctor-post", "command": "${DEV_KIT_BIN} doctor"},
    {"id": "uninstall", "command": "${DEV_KIT_BIN} uninstall ${PURGE_FLAG}"}
  ]
}

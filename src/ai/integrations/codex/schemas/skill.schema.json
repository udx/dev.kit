{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "description", "sections"],
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title"],
        "properties": {
          "title": { "type": "string" },
          "lines": { "type": "array", "items": { "type": "string" } },
          "bullets": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}

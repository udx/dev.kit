{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["header", "groups"],
  "properties": {
    "header": { "type": "array", "items": { "type": "string" } },
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "rules"],
        "properties": {
          "title": { "type": "string" },
          "rules": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["pattern", "decision"],
              "properties": {
                "pattern": { "type": "array", "items": { "type": "string" } },
                "decision": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
